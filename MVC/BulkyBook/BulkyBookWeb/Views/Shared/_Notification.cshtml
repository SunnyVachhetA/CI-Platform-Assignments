@{
    if(TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible d-flex fade show align-items-center" role="alert">
            <div>
                @TempData["success"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

@{
    if(TempData["failed"] != null)
    {
        <div class="alert alert-danger alert-dismissible d-flex fade show align-items-center" role="alert">
            <div>
                @TempData["failed"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}