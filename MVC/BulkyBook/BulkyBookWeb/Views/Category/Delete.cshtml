@model Category
<form method = "POST">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class = "text-primary">
                Delete Category
            </h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" disabled class = "form-control">
        </div>
        
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="text" asp-for="DisplayOrder" disabled class = "form-control">
        </div>

        <button class = "btn btn-primary" type = "submit">
            Delete
        </button>

        <a asp-controller = "Category" asp-action="Index" class = "btn btn-secondary">Back To List</a>
    </div>
</form>