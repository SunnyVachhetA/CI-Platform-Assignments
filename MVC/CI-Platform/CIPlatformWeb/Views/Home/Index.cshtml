@{
    ViewData["Title"] = "Login | Home";
}

<section class="d-flex flex-column flex-lg-row gap-2 gap-lg-0">
    <partial name="_HeroBanner" />
    <!-- <img src="./assets/Grow-Trees-On-the-path-to-environment-sustainability-login.png" alt="Login Hero Image"> -->
    <div class="right-section d-flex flex-column align-items-center justify-content-center flex-shrink-0 p-5">
        <form class="d-grid gap-2 gap-md-4">
            <div class="form-group m-4 text-start">
                <label for="email" class="input-label text-light-custom">Email address</label>
                <input type="email" class="form-control custom-input-active" id="email" value="evan.donohue@gmail.com" placeholder="Enter email">
            </div>

            <div class="form-group mx-4 text-start">
                <label for="password" class="input-label text-light-custom">Password</label>
                <input type="password" class="form-control custom-input" id="password" value="hellothere" placeholder="Enter Password">
            </div>
            <button class="btn mx-auto mt-4 btn-login">
                Login
            </button>
        </form>

        <a  asp-controller="Home"
            asp-action="ForgotPassword"
            class="mt-3 login-help-text text-light-custom"
        >
            Lost your password?
        </a>

        <span class="mt-3 login-help-text text-light-custom">
            Don’t have an account? <a href="">Create an account</a>
        </span>

        <span class="login-help-text text-light-custom mt-4 policy-text">
            Privacy Policy
        </span>
    </div>
</section>