@model IEnumerable<BannerVM>
<div class="border-bottom mb-2">
    <div class="border-bottom-1 mx-content pb-2 font-30">
        Banner Management
    </div>
</div>

<div class="mt-4 d-flex justify-content-between">
    <div class="border mx-content py-1 px-3 d-flex align-items-center" id="admin-search-container">
        <img src="./assets/search.png" alt="Search Here" height="20px" width="20px">
        <input type="text" name="Search" id="banner-search" placeholder="Search here" class="border-0 ms-2 form-control">
        <div class="spinner-border opacity-0 spinner-control" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <button class="btn-g-orange gap-0 px-2 py-0 pe-3" id="btn-banner-add">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#f88634" class="bi bi-plus"
             viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
        Add
    </button>
</div>

<div class="mt-4 table-responsive admin-table">
    @if (!Model.Any())
    {
        <p class="text-info-message p-2 mx-content mx-auto">There are no banners available at the moment!</p>
    }
    else
    {
        <table class="table border">
            <thead class="">
                <tr class="border">
                    <th>Sr.</th>
                    <th>Banner</th>
                    <th>Title</th>
                    <th>Sort Order</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            @{
                var index = 1;
            }
            @foreach (var banner in Model)
            {
                <tr>
                    <td>
                        @index++
                    </td>
                    <td>
                        <img src="@banner.Path" alt="Banner Image"/>
                    </td>
                    <td>
                        @banner.Title
                    </td>
                    <td class="text-center">
                        @banner.SortOrder
                    </td>
                    <td>
                        <div class="d-flex gap-3 justify-content-center align-items-center">
                                <img class="cursor-pointer banner-edit" data-bannerid="@banner.BannerId" src="~/assets/editing.png" alt="Edit">
                                @if (banner.Status)
                                {
                                    <img class="cursor-pointer banner-delete" data-bannerid="@banner.BannerId" src="~/assets/delete.png" alt="Delete">
                                }
                                else
                                {
                                    <img class="cursor-pointer banner-restore" height="19px" width="18px" data-bannerid="@banner.BannerId" src="~/assets/restore.svg" alt="Delete">
                                }
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>

<div class="pagination c-pagination-item mt-2 d-flex justify-content-center justify-content-md-end gap-2" id="pagination-container">
</div>