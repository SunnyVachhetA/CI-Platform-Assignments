@model IEnumerable<AdminMissionVM>
<div class="border-bottom mb-2">
    <div class="border-bottom-1 mx-content pb-2 font-30">
        Missions
    </div>
</div>

<div class="mt-4 gap-4 d-flex flex-column flex-md-row justify-content-center justify-content-md-between">
    <div class="border mx-content py-1 px-3 d-flex align-items-center" id="admin-search-container">
        <img src="~/assets/search.png" alt="Search Here" height="20px" width="20px">
        <input type="text" name="Search" id="msn-search" placeholder="Search here" class="border-0 ms-2 timesheet-search form-control">
        <div class="spinner-border opacity-0 spinner-control" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="d-flex gap-4 justify-content-center">
        <button class="btn-g-orange gap-0 px-2 py-0 pe-3" id="btn-msn-time-add">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#f88634" class="bi bi-plus"
                 viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
            Add Time Mission
        </button>
        <button class="btn-g-orange gap-0 px-2 py-0 pe-3" id="btn-msn-goal-add">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#f88634" class="bi bi-plus"
                 viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
            Add Goal Mission
        </button>
    </div>
</div>

<div class="mt-4 table-responsive admin-table">
    @if (!Model.Any())
    {
        <p class="text-info-message p-2 mx-content mx-auto">There are no timesheet entry at the moment!</p>
    }
    else
    {
        <table class="table border">
            <thead class="">
                <tr class="border">
                    <th>Mission Title</th>
                    <th>Mission Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var mission in Model)
                {
                    <tr>
                        <td>@mission.Title</td>
                        <td>@Html.DisplayFor(_ => mission.MissionType)</td>
                        <td>@mission.StartDate?.ToString("d")</td>
                        <td>@mission.EndDate?.ToString("d")</td>
                        <td class="@mission.MissionStatus .text-capitalize">
                            @mission.MissionStatus
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                
                                @if (mission.MissionStatus == MissionStatus.ONGOING)
                                {
                                    <img src="~/assets/editing.png" data-missionid = "@mission.MissionId" alt="Edit"/>
                                }

                                <img src="~/assets/delete.png" alt="Delete" data-missionid="@mission.MissionId" />

                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    }
</div>

<div class="pagination c-pagination-item mt-2 d-flex justify-content-center justify-content-md-end gap-2" id="pagination-container">
</div>