@model SkillVM
<!-- Add Theme Form Modal Begin -->
<div class="modal" tabindex="-1" id="addSkillModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title font-22 text-black-1">Add Skill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="user-modal-form" id="form-add-skill">
                <div class="modal-body d-flex flex-column gap-3">
                    <div>
                        <label class="form-label" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Skill Title">
                        <span id="err-title" asp-validation-for="Name" class="text-danger font-xs"></span>
                    </div>
                    <div>
                        <label class="form-label" asp-for="Status"></label>
                        <select class="form-select" asp-for="Status">
                            <option value="" selected disabled>Select Status</option>
                            <option value="true">Active</option>
                            <option value="false">Not Active</option>
                        </select>
                        <span id="err-status" class="text-danger font-xs" asp-validation-for="Status"></span>
                    </div>
                    
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn-g-gray" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn-g-orange">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Add theme Form Modal finish -->

<partial name="_ValidationScriptsPartial" />
