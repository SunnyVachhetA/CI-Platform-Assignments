@model IEnumerable<ContactUsVM>
<div class="border-bottom mb-2">
    <div class="border-bottom-1 mx-content pb-2 font-30">
        Mission Skill
    </div>
</div>

<div class="mt-4 d-flex justify-content-between">
    <div class="border mx-content py-1 px-3 d-flex align-items-center" id="admin-search-container">
        <img src="./assets/search.png" alt="Search Here" height="20px" width="20px">
        <input type="text" name="Search" id="contact-us-search" placeholder="Search here" class="border-0 ms-2 form-control">
        <div class="spinner-border opacity-0 spinner-control" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<div class="mt-4 table-responsive admin-table">
    @if (!Model.Any())
    {
        <p class="text-info-message p-2 mx-content mx-auto">There are no mission skills available at the moment!</p>
    }
    else
    {
        <table class="table border">
            <thead class="">
                <tr class="border">
                    <th class="font-22 fw-400">User Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th class="font-22 fw-400">Last Modified</th>
                    <th class="font-22 fw-400">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var contact in Model)
                {
                    <tr>
                        <td>
                            @contact.UserName
                        </td>
                        <td>
                            @contact.Email
                        </td>
                        <td>
                            @contact.Subject
                        </td>
                        <td>
                            
                        </td>
                        <td>
                            <div class="d-flex gap-3">
                                
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="pagination c-pagination-item mt-2 d-flex justify-content-center justify-content-md-end gap-2" id="pagination-container">
</div>