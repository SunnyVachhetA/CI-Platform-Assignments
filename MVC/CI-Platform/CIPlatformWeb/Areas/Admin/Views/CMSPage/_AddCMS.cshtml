@model CMSPageVM
<div class="mt-4 border">
    <h4 class="px-4 mb-0 py-3 bg-tile fw-400">Add</h4>

    <div class="px-4 mt-2 pb-4">
        <form id="form-add-cms" class="admin-form d-flex flex-column gap-4">
            <div class="col-12">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                <span class="font-xs text-danger" asp-validation-for="Title"></span>
            </div>
            <div>
                <label asp-for="Description" class="form-label"></label>
                <textarea id="description" asp-for="Description" placeholder="Enter description"></textarea>
                <span class="font-xs text-danger" id="err-desc" asp-validation-for="Description"></span>
            </div>
            <div class="col-12">
                <label asp-for="Slug" class="form-label"></label>
                <input asp-for="Slug" class="form-control" class="Enter Unique Slug">
                <span class="font-xs text-danger" id="err-slug" asp-validation-for="Slug"></span>
            </div>
            <div>
                <label asp-for="Status" class="form-label"></label>
                <select class="form-select" asp-for="Status">
                    <option value="Select Status" disabled selected>Select Status</option>
                    <option value="true">Active</option>
                    <option value="false">Deactivate</option>
                </select>
                <span class="font-xs text-danger" asp-validation-for="Status"></span>
            </div>

            <div class="d-flex justify-content-center justify-content-md-end gap-2">
                <button class="btn-g-gray">Cancel</button>
                <button class="btn-g-orange" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial"/>