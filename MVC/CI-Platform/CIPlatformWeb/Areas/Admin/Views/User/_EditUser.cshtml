@model AdminUserInfoVM
<div class="mt-4 border">
    
    <h4 class="px-4 mb-0 py-3 bg-tile fw-400">Edit User</h4>

    <div class="px-4 mt-2 pb-4">
        <form id="form-edit-user" class="admin-form d-flex flex-column gap-4">
            <input type="hidden" asp-for="UserId"/>
            <div class="text-center">
                <input type="hidden" asp-for="Avatar" id="user-avatar"/>
                <img for="usr-profile-upload"  class="rounded-circle cursor-pointer" alt="User image" id="usr-profile-img"
                     onclick="document.getElementById('usr-profile-upload').click();">
                <input type="file" hidden id="usr-profile-upload" accept=".jpeg, .jpg, .png" asp-for="UserAvatar">
                <p class="text-black-1 mb-0 font-22">@Model.FirstName @Model.LastName</p>
            </div>

            <div class="row gx-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter user first name">
                    <span class="text-danger font-xs" asp-validation-for="FirstName"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter user last name">
                    <span class="text-danger font-xs" asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="row gx-3">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter user email" readonly>
                    <span class="text-danger font-xs" asp-validation-for="Email" ></span>
                    <span class="text-danger font-xs" id="err-email"></span>

                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter user phone number">
                    <span class="text-danger font-xs" asp-validation-for="PhoneNumber"></span>

                </div>
            </div>

            <div class="row gx-3">
                <div class="col-md-6">
                    <label asp-for="EmployeeId" class="form-label"></label>
                    <input asp-for="EmployeeId" class="form-control" placeholder="Enter employee ID">
                </div>
                <div class="col-md-6">
                    <label asp-for="Department" class="form-label"></label>
                    <input asp-for="Department" class="form-control" placeholder="Enter user department">
                </div>
            </div>

            <div>
                <label asp-for="Profile" class="form-label">User Profile*</label>
                <textarea asp-for="Profile" class="form-control" rows="4" placeholder="Enter information about user"></textarea>
                <span class="text-danger font-xs" asp-validation-for="Profile"></span>
            </div>

            <div class="row gx-3">
                <div class="col-md-6">
                    <label asp-for="CityId" class="form-label"></label>
                    <select class="form-select cursor-pointer" asp-for="CityId" id="city-menu">
                        <option value="" selected disabled>Select City</option>
                        @foreach (var city in Model.CityList)
                        {
                            <option value="@city.CityId" data-countryid="@city.CountryId">@city.Name</option>
                        }
                    </select>
                    <span class="text-danger font-xs" asp-validation-for="CityId"></span>

                </div>
                <div class="col-md-6">
                    <label asp-for="CountryId" class="form-label"></label>
                    <select class="form-select cursor-pointer" asp-for="CountryId" id="country-menu">

                        <option value="" disabled selected>Select Country</option>
                        @foreach (var country in Model.CountryList)
                        {
                            <option value="@country.CountryId">@country.Name</option>
                        }
                    </select>
                    <span class="text-danger font-xs" asp-validation-for="CountryId"></span>
                </div>
            </div>
            
            <div>
                <label asp-for="Status" class ="form-label"></label>
                <select class="form-select cursor-pointer" asp-for="Status">
                    <option selected disabled value="">Select Status</option>
                    <option value="true">Active</option>
                    <option value="false">In-Active</option>
                </select>
                <span class="text-danger font-xs" asp-validation-for="Status"></span>
            </div>

            <div class="d-flex justify-content-center justify-content-md-end gap-2">
                <button class="btn-g-gray" id="btn-cancel">Cancel</button>
                <button class="btn-g-orange" type="submit">Update User</button>
            </div>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />