@{
    var userId = 0L;
    var addStoryPageUrl = string.Empty;
    if (Context.Session.GetString("UserId") != null)
    {
        userId = Convert.ToInt64(Context.Session.GetString("UserId")!);
        addStoryPageUrl = Url.Action("AddStory", "Story", new { userId = userId });
    }
