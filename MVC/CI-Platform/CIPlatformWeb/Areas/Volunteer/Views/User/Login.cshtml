@model UserLoginVM
@{
    ViewData["Title"] = "Login | CI Platform";
}

<section class="d-flex flex-column flex-lg-row gap-2 gap-lg-0 min-vh-100">
    <partial name="_HeroBanner" model="Model.Banners" />
    <div class="right-section d-flex flex-column align-items-center justify-content-between flex-shrink-0 p-0 p-md-5 flex-nowrap">
        <div class="form-wrapper d-flex flex-column align-items-center justify-content-center mt-auto">
            <form class="d-grid gap-3" method="POST" asp-action="Login">
                <partial name="_FormMessage"></partial>
                <input type="hidden" asp-for="ReturnUrl"/>
                <div class="font-15 text-danger" asp-validation-summary="All"></div>
                <div class="form-group mx-4 text-start">
                    <label asp-for="Email" class="input-label text-light-custom"></label>
                    <input asp-for="Email" type="email" class="form-control custom-input" id="email" placeholder="Enter email" value="sunnyvachheta26@gmail.com">
                    <span asp-validation-for="Email" class="text-danger font-10"></span>
                </div>
                <div class="form-group mx-4 text-start">
                    <label asp-for="Password" class="input-label text-light-custom"></label>
                    <input asp-for="Password" type="password" class="form-control custom-input" id="password" placeholder="Enter Password" value="$123Pass">
                    <span asp-validation-for="Password" class="text-danger font-10"></span>
                </div>
               
                <button class="btn mx-auto mt-4 btn-login w-75" type="submit">Login</button>
            </form>
            <a asp-controller="User" asp-action="ForgotPassword" class="mt-3 login-link-text fw-light">Lost your password?</a>
            <span class="mt-3 text-light-custom">Don’t have an account? <a asp-controller="User" asp-action="Registration" class="login-link-text">Create an account</a>
                </span>
        </div>
        <a class="login-help-text text-light-custom" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
    </div>
</section>


