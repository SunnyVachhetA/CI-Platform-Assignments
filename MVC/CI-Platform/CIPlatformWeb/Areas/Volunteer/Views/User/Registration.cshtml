@model UserRegistrationVM
@{
    ViewData["Title"] = "Login | User";
}

<section class="d-flex flex-column flex-lg-row gap-2 gap-lg-0 registration-page">
    <partial name="_HeroBanner" model = "Model.Banners"/>
    <div class="right-section d-flex flex-column justify-content-center align-items-center gap-2 flex-nowrap">
        <form class="d-grid gap-2" asp-action="Registration" method="POST" id="form-reg">
            <div class="form-group text-start">
                <label asp-for="FirstName" class="input-label fw-light"></label>
                <input class="form-control custom-input" asp-for="FirstName" id="first-name" placeholder="Enter your first name">
                <span asp-validation-for="FirstName" class="text-danger font-10"></span>
            </div>
            <div class="form-group text-start">
                <label asp-for="LastName" class="input-label fw-light"></label>
                <input class="form-control custom-input" asp-for="LastName" id="last-name" placeholder="Enter your last name">
                <span asp-validation-for="LastName" class="text-danger font-10"></span>
            </div>
            <div class="form-group text-start">
                <label asp-for="PhoneNumber" class="input-label fw-light"></label>
                <input type="tel" class="form-control custom-input" asp-for="PhoneNumber" id="phone-number" placeholder="Enter your phone number">
                <span asp-validation-for="PhoneNumber" class="text-danger font-10"></span>
            </div>
            <div class="form-group text-start">
                <label asp-for="Email" class="input-label fw-light"></label>
                <input type="email" class="form-control custom-input" asp-for="Email" id="email" placeholder="Enter your email address">
                <span asp-validation-for="Email" class="text-danger font-10"></span>
            </div>
            <div class="form-group text-start">
                <label asp-for="Password" class="input-label fw-light"></label>
                <input type="password" class="form-control custom-input" asp-for="Password" id="password" placeholder="Create new password">
                <span asp-validation-for="Password" class="text-danger font-10"></span>
            </div>

            <div class="form-group text-start">
                <label asp-for="ConfirmPassword" class="input-label fw-light"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control custom-input" id="cnf-password" placeholder="Enter password again" required>
                <span class="text-danger font-10" id="cnf-pass-error" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button class="btn mx-auto btn-login w-100" type="submit">
                Register
            </button>
        </form>

        <a asp-controller="User" asp-action="ForgotPassword" class="login-link-text fw-light">
            Lost your password?
        </a>

            <span class="font-xs fw-light">
                Already registered? <a asp-controller="User" asp-action="Login" class="login-link-text">Login now</a>
            </span>
        <a asp-controller="Home" asp-action="Privacy" class="fw-light font-xs text-black-1">
            Privacy Policy
        </a>
        </div>
    
</section>

