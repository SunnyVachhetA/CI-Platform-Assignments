@model IEnumerable<VolunteerTimesheetVM>
<div class="d-flex align-items-center justify-content-between">
    <p class="mb-0 text-black-1">Volunteering Hours</p>
    <button class="btn-g-orange gap-0 px-2 py-0 pe-3" id="btnAddVolunteerHour">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#f88634" class="bi bi-plus"
             viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>
        Add
    </button>
</div>
<div class="table-responsive mt-3">
    
    @if (Model.Any())
    {
        <table class="table table-borderless">
            <thead>
            <tr>
                <th>Mission</th>
                <th>Date</th>
                <th>Hours</th>
                <th>Minutes</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.MissionTitle</td>
                    <td>@entry.Date.ToString("d")</td>
                    <td>@entry.Time?.Hours.ToString()h</td>
                    <td>@entry.Time?.Minutes.ToString()min</td>
                    <td class="d-flex gap-4 vl-timesheet-action">
                        @if ( entry.Status == ApprovalStatus.PENDING )
                        {
                            <img src="~/assets/editing.png" data-type="time" data-timesheetid="@entry.TimesheetId" class="edit-hour-entry" alt="Edit">
                            <img src="~/assets/delete.png" data-type="time" data-timesheetid="@entry.TimesheetId" class="delete-hour-entry" alt="Delete">
                        }
                            else if (entry.Status == ApprovalStatus.APPROVED)
                            {
                                <img src="~/images/static/check-mark1.png" alt="Approved" />
                            }
                            else
                            {
                                <img src="~/assets/red-close.png" alert="Declined" />
                            }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-info-message p-2 my-auto mx-content mx-auto mb-0">There are no contribution at the moment.</p>
    }
</div>